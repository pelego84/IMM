<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	
	
	 
	<navigation-rule>
	 	 <from-view-id>/Admin/Login.jsp</from-view-id>
		 <navigation-case>
			 <from-outcome>OK</from-outcome>
			 <to-view-id>/Admin/ReporteVentasMensual.jsp</to-view-id>
			 <redirect/>
		 </navigation-case>
		 <navigation-case>
			 <from-outcome>ERROR</from-outcome>
			 <to-view-id>/Admin/Login.jsp</to-view-id>
		 </navigation-case>
	 </navigation-rule>
	 
	 <navigation-rule>
	 	 <from-view-id>/Admin/*</from-view-id>
		 <navigation-case>
			 <from-outcome>OK_LOGOUT</from-outcome>
			 <to-view-id>/Admin/Login.jsp</to-view-id>
			 <redirect/>
		 </navigation-case>		
	 </navigation-rule>
	 
	 
	 <managed-bean>
	 	<managed-bean-name>manejadorlogin</managed-bean-name>
	 	<managed-bean-class>com.uy.antel.beans.MBLogin</managed-bean-class>
	 	<managed-bean-scope>request</managed-bean-scope>	  
	 </managed-bean>
	 
	 <managed-bean>
	 	<managed-bean-name>manejadorReportes</managed-bean-name>
	 	<managed-bean-class>com.uy.antel.beans.MBReportes</managed-bean-class>
	 	<managed-bean-scope>session</managed-bean-scope>	  
	 </managed-bean>
	
	 
	<application>
	  <message-bundle>
	  	mensajes_es
	  </message-bundle>
     </application>

</faces-config>